{
    "name": "csharp-format-usings",
    "displayName": "C# Format Usings",
    "description": "Sort C# using statements and remove unnecessary usings",
    "icons": {
        "default": "icon-128.png"
    },
    "icon": "icon-256.png",
    "version": "0.0.2",
    "publisher": "gaoshan0621",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Formatters",
        "Programming Languages",
        "Linters",
        "Other"
    ],
    "activationEvents": [
        "onCommand:csharpFormatUsings.formatUsings"
    ],
    "author": {
        "name": "Shan Gao",
        "email": "gaoshan0621@gmail.com"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "csharpFormatUsings.formatUsings",
                "title": "Format Usings"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "csharpFormatUsings.formatUsings",
                    "group": "1_modification",
                    "when": "editorLangId == 'csharp' && !editorReadonly"
                }
            ]
        },
        "configuration": {
            "title": "C# Format Usings configuration",
            "properties": {
                "csharpFormatUsings.sortOrder": {
                    "type": "string",
                    "default": "System Microsoft",
                    "description": "Put namespaces in proper order. Values should be split with space."
                },
                "csharpFormatUsings.splitGroups": {
                    "type": "boolean",
                    "default": true,
                    "description": "Insert blank line between using blocks grouped by first part of namespace."
                },
                "csharpFormatUsings.removeUnnecessaryUsings": {
                    "type": "boolean",
                    "default": true,
                    "description": "Remove unnecessary usings."
                },
                "csharpFormatUsings.numEmptyLinesAfterUsings": {
                    "type": "number",
                    "default": 1,
                    "description": "the number of empty lines would be preserved between using statements and code block."
                },
                "csharpFormatUsings.numEmptyLinesBeforeUsings": {
                    "type": "number",
                    "default": 1,
                    "description": "The maximum number of empty lines before using statements if there are characters, like comments, before usings."
                }
            }
        }
    },
    "keywords": [
        "C#",
        "csharp",
        "format",
        "sort",
        "remove",
        "using"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "package": "node_modules/.bin/vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.48.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "@typescript-eslint/parser": "^2.30.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "license": "MIT",
    "homepage": "https://github.com/gaoshan0621/vscode-csharp-format-usings",
    "repository": {
        "type": "git",
        "url": "https://github.com/gaoshan0621/vscode-csharp-format-usings"
    },
    "bugs": {
        "url": "https://github.com/gaoshan0621/vscode-csharp-format-usings/issues"
    }
}
